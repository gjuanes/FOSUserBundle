{% trans_default_domain 'FOSUserBundle' %}

<script>
	function validateForm() {
		first = document.getElementById("fos_user_resetting_form_plainPassword_first2").value;
		second = document.getElementById("fos_user_resetting_form_plainPassword_second2").value;

		if ( first == second ) {
			document.getElementById("fos_user_resetting_form_plainPassword_first").value  = first;
			document.getElementById("fos_user_resetting_form_plainPassword_second").value = second; 
      		return true;
   		}
   
   		document.getElementById("mismatch_err").innerHTML = "Mismatch Passwords";
   
   		return false;
	}
</script>

<form 
	action="{{ path('fos_user_resetting_reset', {'token': token}) }}" 
	{{ form_enctype(form) }}  
	onsubmit="return validateForm()"  
	method="POST" 
	class="fos_user_resetting_reset">

	{{ form_widget(form) }}

	<div class="panel-body">
		<div id="mismatch_err"></div>
		<h4 class="text-center" style="margin-bottom: 25px;">Type your new password </h4>
		<div class="form-group">
			<div class="col-sm-12">
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-lock"></i></span>
					<input type="password" class="form-control" id="fos_user_resetting_form_plainPassword_first2" name="fos_user_resetting_form[plainPassword][first]" placeholder="Password" required>
				</div>
			</div>
		</div>
						
		<div class="form-group">
			<div class="col-sm-12">
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-lock"></i></span>
					<input type="password" class="form-control" id="fos_user_resetting_form_plainPassword_second2" name="fos_user_resetting_form[plainPassword][second]" placeholder="Password" required>
				</div>
			</div>
		</div>
	</div>
	<div class="panel-footer">

		<div class="pull-right">
			<input class="btn btn-primary" type="submit" value="Confirm" />
		</div>
	</div>

</form>
